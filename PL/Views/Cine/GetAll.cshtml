@model ML.Cine
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>
<div class="row">
    @Html.ActionLink("Agregar","Form","Cine", htmlAttributes:new { @class="btn btn-success" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Editar</th>
            <th scope="col">Id Cine</th>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Ventas</th>
            <th scope="col">Id zona</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Eliminiar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Cine cine  in Model.CineList)
        {
            <tr>
                <td><a class="btn btn-warning" href="@Url.Action("Form","Cine", new { IdCine = cine.IdCine})">  <i class="bi bi-pencil-square"></i></a> </td>
                <th>@cine.IdCine</th>
                <th>@cine.Nombre</th>
                <th>@cine.Direccion</th>
                <th>@cine.Venta</th>
                <th>@cine.Zona.IdZona</th>
                <th>@cine.Zona.Descripcion</th>
                <td><a class="btn btn-danger" href="@Url.Action("Delete","Cine", new { IdCine = cine.IdCine})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"> <i class="bi bi-trash3-fill"></i>  </a></td>
            </tr>
        }


    </tbody>
</table>